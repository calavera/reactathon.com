.action-button
  background-color $secondary
  border 4px solid $action-pink
  border-radius 20px
  box-shadow 0px 3px 10px #888
  color $action-pink
  cursor pointer
  display inline-block
  font-size 1.5rem
  margin 20px 0 0 0
  padding 7px 15px
  text-align center
  text-decoration none
  vertical-align middle
  white-space nowrap
  &:hover
    background-color $action-pink-dark
    color white
    box-shadow none
    cursor pointer
