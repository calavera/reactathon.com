.title-card
  $grid('row', 'center')
  background-color #0a4979
  border 10px solid #80deea
  color #80deea
  text-align center
  transform translateY(-50%)
  h1
    flex-grow 1
    text-transform uppercase
  +$below('sm')
    $center(60vw)
    height 100px
    min-width 150px
    h1
      font-size 1.5rem
  +$above('sm')
    $center(40vw)
    height 120px
    min-width 300px
    h1
      font-size 2.5rem
      letter-spacing 4px
