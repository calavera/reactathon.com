$workshop-width = 400px

.workshops
  background-image url('../../images/backgrounds/bg-workshops-logos.png'), linear-gradient(#9BB3D8, #8D99AC, #AC93A5)
  background-size contain
  border-top 6px solid $primary
  min-height 100vh
  padding-bottom 20px
  text-align center

.info
  $center(75%)
  h1, h3, h4
    color $gray-text
    margin 0
  h1
    font-size 38px
    margin-top -30px
  h2
    color $secondary
    font-size 38px
  h3
    margin-bottom 30px


.instructors-list
  +$above('sm')
    $grid('row', 'center', 'center')
    padding 20px 200px
  +$below('sm')
    display none

.instructor-container
  $cell(4, , 20px)
  text-align center
  .instructor
    color $secondary
    margin-bottom 0
  img
    min-width 150px
    width 50%
.instructor-info
  h4
    margin 0
    color $gray-text

.workshops-list
  $grid('row', 'center', 'center', 'center')
  padding 20px 20px
  max-width 1500px

.workshop-container
  $cell(6, , 100px)
  $grid('column')
  background-color #02AEEF
  box-shadow 0px 2px 8px 0px #525252
  color $secondary
  margin-bottom 60px
  min-height 350px
  min-width $workshop-width
  max-width $workshop-width
  text-align right
  width $workshop-width

.workshop-info
  $grid('column', 'bottom')
  padding 36px
  flex-grow 1
  height 200px
  .name
    font-size 32px
    flex-grow 0.5
  h3
    margin 0
    font-size 24px
  h4
    margin 0
    font-size 20px
    font-weight 100

.title-container
  text-align center
  height 6%
  align-self center

.title
  background-color $quartinary
  box-shadow 0px 0px 5px 0px #717171
  display inline-block
  min-width 150px
  padding 14px 24px
  text-align center
  text-decoration none
  transform translateY(-128%)
  vertical-align middle
  white-space nowrap

.date
  padding 20px 40px 10px
  color black
  background-color $secondary
