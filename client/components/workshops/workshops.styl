$workshop-width = 400px

.workshops
  background-image url('./bg-workshops-logos.png'), linear-gradient(#9BB3D8, #8D99AC, #AC93A5)
  background-size 110%
  border-top 6px solid $primary
  min-height 100vh
  padding-bottom 140px
  text-align center

.info
  $center(75%)
  h1, h3, h4
    color $gray-text
    margin 0
  h1
    font-size $header-date
    margin-top -30px
  h2
    color $secondary
    font-size $header-title
  h3
    margin-bottom 30px


.instructors-list
  +$above('sm')
    $grid('row', 'center', 'center')
    padding 20px 200px
  +$below('sm')
    display none

.instructor-container
  $cell(4, , 20px)
  text-align center
  min-height 300px
  .instructor
    color $secondary
    margin-bottom 0
    margin-top 0
  img
    min-width 150px
    width 50%
    margin-top 20px
.instructor-info
  h4
    margin 0
    color $gray-text

.workshops-list
  $grid('row', 'center', 'center', 'center')
  padding 20px 20px
  max-width 1500px

.workshop-container
  background-color #02AEEF
  box-shadow 0px 2px 8px 0px #525252
  color $secondary
  margin-bottom 60px
  min-height 350px
  +$below('sm')
    $grid('column', , , 'center')
    flex-grow
    text-align center
    width 100%
  +$above('sm')
    $grid('column')
    $cell(6, , 100px)
    text-align right
    min-width $workshop-width
    max-width $workshop-width
    width $workshop-width

.workshop-info
  .name
    font-size 32px
    flex-grow 0.5
    margin-top 10px
    margin-bottom 20px
  .instructor
    margin 0
    font-size 24px
  .inst-title
    margin 0
    font-size 20px
    font-weight 100
    min-width 180px
  +$below('sm')
    $grid('column', 'center')
    padding 36px 0
    flex-grow 1
    min-height 200px
  +$above('sm')
    $grid('column', 'bottom')
    padding 36px
    flex-grow 1
    height 200px

.title-container
  text-align center
  height 6%
  align-self center

.title
  background-color $quartinary
  box-shadow 0px 0px 5px 0px #717171
  display inline-block
  font-size 20px
  font-weight 100
  margin 0
  min-width 180px
  padding 14px 24px
  text-align center
  text-decoration none
  transform translateY(-128%)
  vertical-align middle
  white-space nowrap

.date
  padding 20px 40px 10px
  color black
  background-color $secondary

.action
  text-align center

.sponsors
  text-align center
  +$below('sm')
    $grid('column', , , 'center')
    width 100%
    div
      $cell()
      $center(75%)
      img
        width 100%
  +$above('sm')
    $grid('row', , , 'around')
    $center(50%)
    div
      $cell(5)
      img
        width 100%
    .microsoft
      padding-top 40px
