.general
  $grid('row')
  text-align center
  height 100vh
  background-image url('./gradientGenerator.png'), linear-gradient(#25d7f7, #7190c1)
  .quote
    height 50%
    flex-grow 1
    border-bottom 2px solid $secondary
    h2, h3
      display block
    h2
      color $action-pink
      font-weight 600
      font-size 2.2rem
      max-width 80%
      margin-left auto
      margin-right auto
      margin-top 70px
    h3
      color $secondary
      font-weight 500
  .about
    $center(50%)
    background-image url('./bg-about.png')
    border-bottom 4px solid $primary
    border-right 2px solid $secondary
    display inline-block
    height 50%
    text-align left
    padding 100px 80px
    width 50%
    font-size 1.3em
    color $secondary
    +$below('ab')
      font-size 1.1em
    h2
      margin-top -50px
      color #484848
      text-align center
  .goals
    background url('./bg-goals.png') no-repeat center
    background-size cover
    border-bottom 4px solid $primary
    display inline-block
    height 50%
    padding 100px 80px
    width 50%
    font-size 1.3em
    font-weight 100
    color $secondary
    +$below('ab')
      font-size 1.1em
    h2
      margin-top -50px
      color #484848
    ul
      text-align left
      list-style none
      margin 0
      img
        width 20px
        margin-right 15px
