$about-goals-height = 9rem
.general
  +$above('sm')
    $grid('row')
  +$below('sm')
    $grid('column')
    width 100vw
  text-align center
  min-height 100vh
  background-image url('./gradientGenerator.png'), linear-gradient(#25d7f7, #7190c1)
  .quote
    min-height 50%
    flex-grow 1
    border-bottom 2px solid $secondary
    padding-bottom 20px
    h2, h3
      display block
    h2
      color $green-quote
      font-weight 600
      font-size 2.2rem
      max-width 80%
      margin-left auto
      margin-right auto
      margin-top 70px
    h3
      color $secondary
      font-weight 500
  .about
    background-image url('./bg-about.png')
    display inline-block
    min-height $about-goals-height
    text-align left
    padding 100px 80px
    font-size 1.3em
    color $secondary
    +$below('sm')
      border-bottom 2px solid $secondary
      font-size .9em
      width 100%
    +$above('sm')
      $center(50%)
      border-right 2px solid $secondary
      width 50%
    +$between('sm', 'ab')
      font-size 1.1em
    h2
      margin-top -50px
      color #484848
      text-align center
  .goals
    background url('./bg-goals.png') no-repeat center
    background-size cover
    display inline-block
    min-height $about-goals-height
    width 50%
    font-size 1.3em
    font-weight 100
    color $secondary
    +$below('sm')
      font-size .9rem
      padding 100px 10px
      width 100%
    +$above('sm')
      $center(50%)
      padding 100px 80px
      width 50%
    +$between('sm', 'ab')
      font-size 1.1em
    h2
      margin-top -50px
      color #484848
    ul
      text-align left
      list-style none
      margin 0
      img
        width 20px
        margin-right 15px
