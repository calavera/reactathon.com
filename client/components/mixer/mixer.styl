.mixer
  background-color $secondary
  border-top 6px solid $primary
  min-height 100vh
  text-align center

.cards
  $grid('row', 'center')

.info
  border-bottom 2px solid $lightest-gray
  width 100vw
  padding-bottom 50px
  h2
    font-size $header-date
    margin-top -30px
    color $gray-text
  h3
    color $light-gray
    margin-bottom 0

.sponsors
  width 50vw
  img
    width 100%

.you
  background url('./bg-you.png') no-repeat center
  background-size cover
  color $action-pink
  padding 60px
  width 50vw
  h2
    font-size 2.3rem
    margin 30px 0
  img
    max-width 40px

.presented
  background-image linear-gradient($secondary, #91eeff)
  border-top 2px solid $lightest-gray
  padding 100px 0 175px 0
  width 100vw
  img
    width 300px
  h2
    color $gray-text
    margin-top 100px
    margin-bottom 0
  p
    color $light-gray
    margin-top 100px
